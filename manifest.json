{
	"manifest_version": 3,
	"name": "Manito Amiga",
	"version": "1.0",
	"description": "Herramienta de accesibilidad para leer p√°ginas web y cambiar su color de fondo.",
	"permissions": ["scripting", "activeTab", "all_urls"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon.png",
			"48": "images/icon.png",
			"128": "images/icon.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	}
}
